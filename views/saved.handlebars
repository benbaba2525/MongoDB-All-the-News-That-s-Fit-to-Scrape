<head>
  <title>News Scraper</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body class="body">
<!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">NEWS</a>
  <div class="navDiv">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
     <li class="nav-item">
           <a class="link" href="/">HOME</a>
      </li>
      <li class="nav-item">
        <a class="link" href="/saved">SAVED ARTICLES </a>
      </li>
    </ul>
  </div>
</nav>
</div>

    <hr class="white-underline">

    <!-- Articles List -->
    
<div class="container mt-5">
  {{#each saved}}
<div class="card mb-3" id="article">
  <div class="row no-gutters">
     <!--<div class="col-md-4">-->
      <!-- Image go here -->
      <!--<img class="media" src="{{img}}">-->
    <!--</div>-->
    <div class="col-md-12" id="saved">
      <div class="card-body">
        <h2 class="card-title" id="headline">{{headline}}</h2>
        <ul>
                    <li class="summary">{{summaryOne}}</li>
                    <li class="summary">{{summaryTwo}}</li>
        </ul>

       <div class="col-md-12" style="text-align: center;">
          <a href={{link}} class="link" style="color: rgb(15, 72, 194);">FULL STORY</a>
        </div>
    <hr>
        <div class="col-md-12" id="newNoteDiv">
            <form action="/newnote" method="POST" id="new-note" style="text-align: center; ">
                <input type="hidden" name="id" value={{_id}}>
                <textarea type="name" class="form-control" id="message" placeholder="Record a note..."></textarea>
                <button class="btn btn-lg" id="noteBtn" type="submit" style="background-color: rgba(5, 186, 5, 0.824); margin: 10px;">SUBMIT</button>
            </form>
<hr>
            <!-- Note -->
            <div id="noteDiv">
                <h2 class="savedHeader" style="text-align:center;margin:10px;">Saved Notes</h2>
                <hr>
                <ul>
                {{#each note}}
                <li>{{this}}</li>
                {{/each}}
                </ul>
            </div>
            <form action="/delete" method="DELETE" id="delete-article">
          <input type="hidden" name="id" value={{_id}}>
          <button class="btn btn-lg" id="deleteBtn" type="submit">DELETE</button>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>
</body>
