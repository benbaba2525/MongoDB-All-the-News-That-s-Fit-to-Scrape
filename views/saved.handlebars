<head>
  <title>News Scraper</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body class="body">
<!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">NEWS</a>
  <div class="navDiv">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="link" href="/saved">SAVED ARTICLES <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="link" href="/">SCRAPE NEWS ARTICLES</a>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0 ml-5">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
</div>



<!-- Articles List -->
<div class="container mt-5">
  {{#each saved}}
<div class="card mb-3" id="article">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="/img/newspaper.jpeg" class="card-img" alt="...">
    </div>
    <div class="col-md-8" id="saved">
      <div class="card-body">
        <h2 class="card-title" id="title">{{title}}</h2>
        <p class="card-text" id="summary">{{summary}}</p>
       <hr>
       <div class="col-md-6">
          <a href={{link}} class="link">FULL STORY</a>
        </div>

        <form action="/unsave" method="POST" id="delete-article">
          <input type="hidden" name="id" value={{_id}}>
          <button class="btn btn-lg" id="deleteBtn" type="submit">DELETE</button>
        </form>

        <div class="col-md-6" id="newNoteDiv">
            <form action="/newnote" method="POST" id="new-note">
                <input type="hidden" name="id" value={{_id}}>
                <input type="name" class="form-control" id="message" placeholder="Record a note...">
                <button class="btn btn-lg" id="noteBtn" type="submit">SUBMIT</button>
            </form>

            <!-- Note -->
            <div id="noteDiv">
                <h2 class="savedHeader">Saved Notes</h2>
                <hr>
                <ul>
                {{#each note}}
                <li>{{this}}</li>
                {{/each}}
                </ul>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>



</body>